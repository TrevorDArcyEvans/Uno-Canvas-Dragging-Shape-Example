<Page
  x:Class="Uno.CanvasSample.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Canvas
      x:Name="canvas"
      Grid.ColumnSpan="5"
      Background="Transparent"
      PointerMoved="Canvas_OnPointerMoved">
      
      <Canvas.RenderTransform>
        <CompositeTransform
          ScaleX="0.75"
          ScaleY="0.75"
          TranslateX="200" 
          TranslateY="300" />
      </Canvas.RenderTransform>
    
      <!-- First child (Red) -->
      <Rectangle
        PointerPressed="Shape_OnMouseDown"
        PointerMoved="Shape_OnMouseMove"
        PointerReleased="Shape_OnMouseUp"
        PointerExited="Shape_OnMouseUp"
        Fill="Red"
        Width="50"
        Height="50" />

      <!-- Second child (Green) -->
      <Rectangle
        PointerPressed="Shape_OnMouseDown"
        PointerMoved="Shape_OnMouseMove"
        PointerReleased="Shape_OnMouseUp"
        PointerExited="Shape_OnMouseUp"
        Fill="Green"
        Width="50"
        Height="50"
        Canvas.Left="20"
        Canvas.Top="20" />

      <!-- Third child (Blue) -->
      <Rectangle
        PointerPressed="Shape_OnMouseDown"
        PointerMoved="Shape_OnMouseMove"
        PointerReleased="Shape_OnMouseUp"
        PointerExited="Shape_OnMouseUp"
        Fill="Blue"
        Width="50"
        Height="50"
        Canvas.Left="40"
        Canvas.Top="40" />

      <!-- Fourth child (Purple) -->
      <Rectangle
        PointerPressed="Shape_OnMouseDown"
        PointerMoved="Shape_OnMouseMove"
        PointerReleased="Shape_OnMouseUp"
        PointerExited="Shape_OnMouseUp"
        Fill="Purple"
        Width="50"
        Height="50"
        Canvas.Left="60"
        Canvas.Top="60" />
    </Canvas>
  
    <TextBlock
      Grid.Row="3"
      x:Name="MousePos" />
    
    <Button
      Grid.Row="1"
      Grid.Column="2"
      Content="+"
      Click="Zoom_In" />
    <Button
      Grid.Row="2"
      Grid.Column="2"
      Content="0"
      Click="Zoom_Fit" />
    <Button
      Grid.Row="3"
      Grid.Column="2"
      Content="-"
      Click="Zoom_Out" />
    
    <Button
      Grid.Row="1"
      Grid.Column="5"
      Content="U"
      Click="Translate_Up" />
    <Button
      Grid.Row="2"
      Grid.Column="4"
      Content="L"
      Click="Translate_Left" />
    <Button
      Grid.Row="2"
      Grid.Column="6"
      Content="R"
      Click="Translate_Right" />
    <Button
      Grid.Row="3"
      Grid.Column="5"
      Content="D"
      Click="Translate_Down" />
    <Button
      Grid.Row="2"
      Grid.Column="5"
      Content="O"
      Click="Translate_Reset" />

  </Grid>

</Page>
